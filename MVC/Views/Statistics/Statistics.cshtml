@using Domain.Accounts
@{
    Layout = "_NavLayout";
    ViewData["Title"] = "Statistic";
}

<!DOCTYPE html>

<html lang="" class="h-100 w-100 overflow-hidden">
<head>
    <link rel="stylesheet" href="~/dist/site.css"/>
</head>
<body class="row h-100 w-100">
<div class="text-center col-lg-10">
    <div class="row container-content-body">
        
        <div class="title-container d-flex justify-content-center align-items-center">
            <h2 class="title">FLOWS STATISTICS</h2>
            @if (User.IsInRole(UserRoles.SystemAdmin))
            {
                <div class="csv nav-item bgNewAccent">
                    <button id="exportCSVFlows" class="btn text-dark text-decoration-none">Download CSV</button>
                </div>
            }
        </div>
        
        <div class="chart-container align-items-center">
            <div class="col-md-6">
                <canvas id="barChart" class="w-100"></canvas>
            </div>
            <div class="col-md-6">
                <canvas id="lineChart" class="w-100"></canvas>
            </div>
        </div>
        
        
        <div class="d-flex justify-content-center align-items-center" style="padding: 20px 0;">
            <hr>
        </div>
        
        <div class="title-container d-flex justify-content-center align-items-center">
            <h2 class="title">FLOW STATISTICS</h2>
            @if (User.IsInRole(UserRoles.SystemAdmin))
            {
                <div class="csv nav-item bgNewAccent">
                    <button id="exportCSVFlow" class="btn text-dark text-decoration-none">Download CSV</button>
                </div>
            }
        </div>
        
        <div class="col-md-6">
            <div class="kiosk-container-top-left">
                <label class="d-flex flex-column">
                    <p style="color: aliceblue">Select a Flow to get its specific statistics.</p>
                    <select id="selectFlow">
                    </select>
                </label>
            </div>
        </div>
        <div class="chart-container align-items-center">
            <div class="col-md-6">
                <canvas id="radarChart" class="w-100"></canvas>
            </div>
            <div class="col-md-6">
                <div class="right-graph">
                    <canvas class="w-100" id="pieChart"></canvas>
                </div>
            </div>
        </div>
        
        <div class="d-flex justify-content-center align-items-center" style="padding: 20px 0;">
            <hr>
        </div>
        
        <div class="title-container d-flex justify-content-center align-items-center">
            <h2 class="title">QUESTION STATISTICS</h2>
            @if (User.IsInRole(UserRoles.SystemAdmin))
            {
                <div class="csv nav-item bgNewAccent"> 
                    <button id="exportCSVQuestion" class="btn text-dark text-decoration-none">Download CSV</button>
                </div>
            }
        </div>
        
        
        <div class="container-selectFlow">
            <div class="kiosk-container-top-left">
                <label class="d-flex flex-column">
                    <p style="color: aliceblue">Select a Question to get its specific statistics.<br>(dependent on your chosen flow above)</p>
                    <select id="selectQuestion">
                    </select>
                </label>
            </div>
        </div>
        <div class="chart-container d-flex flex-row align-items-center justify-content-center">
            <div class="col-md-8">
                <canvas id="doughnutChart"></canvas>
            </div>
        </div>
        <div class="text-start" id="answersSummary"></div>


    </div>
</div>
</body>
</html>

@section Scripts
{
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/dist/site.entry.js" defer></script>
    <script src="~/dist/statistics.entry.js" defer></script>
}
