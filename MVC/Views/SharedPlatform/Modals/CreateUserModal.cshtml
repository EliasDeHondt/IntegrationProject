<div class="modal" id="CreateUserModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content border-3 border-accent">
            <div class="modal-header bgColor border-0">
                <button type="button" class="btn-close invisible"></button>
                <h3 class="modal-title text-black text-end">Create a user</h3>
                <button type="button" class="btn-close" id="butCloseCreateUserModal"></button>
            </div>
            <div class="modal-body bgColor">
                <div class="col ms-3">
                    <div class="form-group mb-3">
                        <label>
                            Employee name
                            <input type="text" class="form-control" id="inputName" placeholder="Enter name" required>
                            <span id="nameWarning" class="warning"></span>
                        </label>
                    </div>
                    <div class="form-group mb-3">
                        <label>
                            Employee email
                            <input type="email" class="form-control" id="inputEmail" autocomplete="off" placeholder="Enter email">
                            <span id="emailWarning" class="warning"></span>
                        </label>
                    </div>
                    <div class="form-group mb-4">
                        <label>
                            Password
                            <input type="password" class="form-control" id="inputPassword" autocomplete="new-password" placeholder="Password">
                            <span id="passwordWarning" class="warning"></span>
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <label class="form-check-label">
                            <input class="form-check-input" type="radio" name="roleRadios" id="radioAdmin" value="SpAdmin" checked>
                            Admin
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <label class="form-check-label">
                            <input class="form-check-input" type="radio" name="roleRadios" id="radioFacilitator" value="Facilitator">
                            Facilitator
                        </label>
                    </div>

                    <div id="facilitatorContainer" class="visually-hidden">
                        <label class="d-flex flex-column">
                            Select the Projects
                            <select multiple id="selectProject">

                            </select>
                        </label>
                    </div>
                    <div id="adminContainer">
                        <div class="form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox" value="" id="checkUserPermission"/>
                                User permissions
                            </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox" value="" id="checkProjectPermission"/>
                                Project permissions
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-0 bgColor">
                <button type="button" class="btn bgSecondary text-white" id="butCancelCreateUserModal">Cancel</button>
                <button type="button" class="btn bgPrimary text-white" id="butConfirmCreateUser">Create user</button>
            </div>
        </div>
    </div>
</div>