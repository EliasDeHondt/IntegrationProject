<div id="modalReplies" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Replies</h5>
                <button id="btnCloseReplyModal" type="button" class="close" aria-label="close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="replyContainer"></div>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-8">
                        <div class="input-wrapper row">
                            <textarea id="textReply" class="input-box" type="text" placeholder="Type a reply..."></textarea>
                            <span class="underline"></span>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <button id="btnPostReply" class="me-3 p-1 btn bg-none shadow-none border-0 webapp-btn">
                            <i class="bi bi-send-fill webapp-util-icon"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

