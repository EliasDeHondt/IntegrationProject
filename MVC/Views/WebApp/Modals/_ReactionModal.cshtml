<div id="modalReplies" class="modal overflow-hidden" tabindex="-1">
    <div class="modal-dialog h-100">
        <div class="modal-content h-75">
            <div class="modal-header webapp-reaction-header">
                <h5 class="modal-title">Replies</h5>
                <button id="btnCloseReplyModal" type="button" class="btn-close" aria-label="close">
                </button>
            </div>
            <div class="modal-body webapp-reaction-body">
                <div id="replyContainer" class="col">

                </div>
            </div>
            <div class="modal-footer webapp-reaction-footer">
                <div class="row w-100">
                    <div class="col-10">
                        <div class="input-wrapper row">
                            <textarea id="textReply" class="input-box" type="text" placeholder="Type a reply..."></textarea>
                            <span class="underline"></span>
                        </div>
                    </div>
                    <div class="col-2 m-auto">
                        <button id="btnPostReply" class="ms-2 p-1 btn bg-none shadow-none border-0 webapp-btn">
                            <i class="bi bi-send-fill webapp-util-icon"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>