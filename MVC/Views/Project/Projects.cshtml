@model Domain.ProjectLogics.Project

@{
    Layout = null;
    ViewData["Title"] = $"Project {Model.Id}";
}

<!DOCTYPE html>

<html lang="" class="h-100 w-100">
<head>
    <title>title</title>
    <link rel="stylesheet" href="~/dist/site.css"/>
</head>
<body class="row h-100 w-100">
<div class="text-center">
    <div class="row">
        <!-- Dashboard -->
        <partial name="../Layout/NavigationLayout.cshtml"/>
        
        <!-- Titel -->
        <div class="col-lg-10 col-md-9 col-sm-8 col-6">
            <div class="py-3">
                <div class="row align-items-center">
                    <div class="col">
                        <div class=" card border-black border-2 bgAccent">
                            <input id="inputTitle" class="m-1" placeholder="Project Title.">
                        </div>
                        <p id="errorMsgTitle" style="text-align: left;">&nbsp;</p>
                    </div>
                    <div class="col-auto card border-black border-2 bgAccent align-top">
                        @* <a class="nav-link text-light" asp-area="" asp-controller="SharedPlatform" asp-action="Dashboard" asp-route-id="1"> Publish Project</a> *@
                        <button id="btnPublishProject" class="border-0 p-0 m-2" style="background: none;" data-project-id="@Model.Id">Publish Project</button>
                    </div>
                </div>
            </div>
            
            <div class="col">
                <div class="row row-cols-3 ps-4 pe-4 m-4 ">
                    <div>
                        <!-- Text -->
                        <div class="row">
                            <div class="col mt-3 mb-3">
                                <div class="card border-black border-2 bgAccent" style="height: 250px; width: 1000px">
                                    <div class="card-body align-items-center d-flex justify-content-center">
                                        <textarea id="inputText" placeholder="Write a desciption fro your project." class="form-control" style="height: 100%; width: 100%; resize: none;"></textarea>
                                    </div>
                                </div>
                            </div>
                            @* <div class="col mt-3 mb-3"> *@
                            @*         <p id="errorMsgText" style="text-align: left;">&nbsp;</p> *@
                            @* </div> *@
                        </div>
                        
                        <!-- Flows -->
                        <div class="col mt-3 mb-3">
                            <div class="card-footer d-flex justify-content-center">
                                <button class="btn btn-primary mx-2">Edit Lineaire Flow</button>
                                <button class="btn btn-secondary mx-2">Edit Circulaire Flow</button>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Subthemas -->
                <div class="col-lg-10 col-md-9 col-sm-8 col-6">
                    <div class="py-3">
                        <partial name="Partials/SubthemePartial"/>
                                
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>

</body>
</html>
@* <p class="visually-hidden" id="platformId">@Model.Id</p> *@

<script src="~/dist/site.entry.js" defer></script>
<script src="~/dist/project.entry.js" defer></script>