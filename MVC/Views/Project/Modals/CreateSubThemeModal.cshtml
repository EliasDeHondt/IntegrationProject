<div class="modal" id="createSubThemeModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content border-3 border-accent">
            <div class="modal-header bgColor border-0">
                <button type="button" class="btn-close invisible"></button>
                <h3 class="modal-title text-black text-end">Create a SubTheme</h3>
                <button type="button" class="btn-close" id="butCloseCreateSubTheme"></button>
            </div>
            <div class="modal-body bgColor">
                <div class="col ms-3">
                    <div class="form-group mb-3">
                        <label>
                            SubTheme subject
                            <input type="text" class="form-control" id="inputSTSubject" placeholder="Enter subject" required>
                            <span id="stsubjectWarning" class="warning"></span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-0 bgColor">
                <button type="button" class="btn bgSecondary text-white" id="butCancelCreateSubTheme">Cancel</button>
                <button type="button" class="btn bgPrimary text-white" id="butConfirmCreateSubTheme">Create SubTheme</button>
            </div>
        </div>
    </div>
</div>