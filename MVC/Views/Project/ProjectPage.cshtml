@model Domain.ProjectLogics.Project

@{
    Layout = "_NavLayout";
    ViewData["Title"] = $"Project {Model.Id}";
}

<!DOCTYPE html>

<html lang="" class="h-100 w-100 overflow-hidden" xmlns="http://www.w3.org/1999/html">
<head>
    <link rel="stylesheet" href="~/dist/site.css"/>
</head>
<body class="row h-100 w-100">

    <div class="text-center col-lg-10">
        <div class="row container-content-body">
            <!-- Dashboard -->
            <div id="closedProjectOverlay"></div>
            <!-- Titel -->
            <div class="py-3">
                @* <div > *@
                <div class="d-flex row">
                    <div class="col">
                        <div class=" card border-black border-2 bgAccent">
                            <input id="inputTitle" class="m-1" placeholder="Project Title.">
                        </div>
                        <p id="errorMsgTitle" style="text-align: left;">&nbsp;</p>
                    </div>
                    <div class="col-auto card border-black border-2 bgAccent align-top">
                        <button id="btnPublishProject" class="border-0 p-0 m-2" style="background: none;" data-project-id="@Model.Id">Save Project</button>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="row row-cols-3 ps-4 pe-4 m-4 ">
                    <div class="flex-fill" style="overflow-y: auto;">
                        <!-- Text -->
                        <div class="row">
                            <div class="col mt-3 mb-3">
                                <div class="card border-black border-2 bgAccent" style="height: 250px; width: 1000px">
                                    <div class="card-body align-items-center d-flex justify-content-center">
                                        <textarea id="inputText" placeholder="Write a description for your project." class="form-control" style="height: 100%; width: 100%; resize: none;"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="col mt-3 mb-3">
                                <a class="btn btn-primary border-black border-2" id="btn-open-styling">
                                    <p>
                                        STYLING
                                        <br/>
                                        <i class="bi bi-caret-right-fill" id="arrow-open-styling"></i>
                                    </p>
                                </a>
                            </div>
                        </div>

                        <!-- Flows -->
                        <div class="title-container">
                            <span class="title-title">Edit Flows</span>
                            <hr class="title-divider">
                        </div>

                        <div class="col" style="text-align: left;">
                            <div class="flow-container" style="display: flex;">
                                <div class="flow-card" id="btnCreateFlowProject" style="width: 200px; height: 300px;">
                                    <a class="btn ">
                                        <h2 class="flow-card-header"><i class="bi bi-plus"></i></h2>
                                        <h3 class="flow-card-footer">New Flow</h3>
                                    </a>
                                </div>
                                <div id="flow-cards"></div> <!-- This gets filled automatically in FlowCreator.ts -->
                            </div>
                        </div>

                    </div>
                </div>

                <!-- Subthemas -->
                <div>
                    <div class="py-3">
                        <partial name="Partials/SubThemePartial"/>
                    </div>
                </div>
            </div>

        </div>
    </div>
</body>
</html>
@* <p class="visually-hidden" id="platformId">@Model.Id</p> *@
<partial name="Modals/CreateSubThemeModal"/>

<partial name="Modals/CreateProjFlowModal"/>

<partial name="Toasts/_ProjectFlowCreateToast"/>

<partial name="Modals/DeleteSubThemeModal"/>


<script src="~/dist/site.entry.js" defer></script>
<script src="~/dist/project.entry.js" defer></script>