@using Domain.ProjectLogics
@model IEnumerable<Domain.ProjectLogics.MainTheme>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Main Themes";
}

<div>
    <table class="table">
        <thead>
        <tr>
            <th>Main Theme ID</th><th>Subject</th><th>Details</th>
        </tr>
        </thead>
        <tbody>
        @foreach (MainTheme theme in Model)
        {
            <tr>
                <td>@theme.Id</td>
                <td>@theme.Subject</td>
                <td>
                    <a asp-action="Details" asp-route-id="@theme.Id">Details</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>